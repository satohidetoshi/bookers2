

<div class="container">
<div class="row">
  <div class="col-md-3">
<h1>User info</h1><br>

<%= image_tag current_user.get_profile_image(100,100) %>
  <%# if current_user.profile_image.attached? %>
    <%#= image_tag current_user.profile_image, size: "200x200" %>
  <%# else %>
    <%#= image_tag 'no_image-1.jpg', size: "200x200" %>
  <%# end %>


name <%= current_user.name %><br>

introduction <%= current_user.introduction %><br>

<div>
  <%= link_to edit_user_path(current_user.id) do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>



<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book_new ,url: books_path, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: "btn btn-secondary" %>
<% end %>

</div>



<div class="col-md-8 offset-md-1">
<table class="table table-striped">
  <h1>Users</h1><br>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @users.each do |user| %>
  <tr>
    <td> <%= image_tag user.get_profile_image(200,200) %></td>
    <td><%= user.name %></td>
    <td> <%= link_to 'Show', user_path(user.id) %></td>


  </tr>
  <% end %>
  </div>


  </tbody>
</table>

</div>
</div>

