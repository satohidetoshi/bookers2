
<div class="container">
<div class="row">
  <div class="col-md-3">
<h1>User info</h1><br>

  <% if @book.user.profile_image.attached? %>
    <%= image_tag @book.user.profile_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image-1.jpg', size: "200x200" %>
  <% end %>


name <%= @book.user.name %><br>

introduction <%= @book.user.introduction %><br>

<div>
  <%= link_to edit_user_path(@book.user.id) do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>



<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @newbook ,url: books_path, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: "btn btn-secondary" %>
<% end %>

</div>


<div class="col-md-8 offset-md-1">
<table class="table table-striped">
 <h1>Book detail</h1><br>
<table class="table table-striped">
  <tbody>
  <tr>
    <td> <%= image_tag @book.user.get_profile_image(200,200) %></td>
   <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>

    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
 <% if @book.user == current_user %>
    <td> <%= link_to 'Edit', edit_book_path(@book.id) %></td>
    <td> <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
<% end %>
  </tr>
  </tbody>
  </table>

  </table>
  </div>